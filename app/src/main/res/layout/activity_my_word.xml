<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context="com.dongduk.hangeul.hangeul_test1.MyWordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20.7dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20.7dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20.3dp"
            android:src="@drawable/icon_flower"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <!-- filler -->
    <TextView android:layout_height="0dip"
        android:layout_width="fill_parent"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="49.3dp"
        android:layout_gravity=""
        android:background="#c4792f"
        android:text="삭제"
        android:visibility="gone"
        android:textColor="#ffffff" />

</LinearLayout>
