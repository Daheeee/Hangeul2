<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dongduk.hangeul.hangeul_test1.MainActivity"
    >


    <TextView
        android:id="@+id/tvDateMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="2017.08.21"
        android:textAlignment="center"
        android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="388.6"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvMeaning04"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="13dp"
                android:text="마\n음\n씨\n가\n\n부\n드\n럽\n고\n\n다\n스\n럽\n다\n."
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvMeaning03"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="13dp"
                android:text="속\n이\n\n너\n르\n다\n.\n"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvMeaning02"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="13dp"
                android:text="겉\n으\n로\n\n보\n기\n\n보\n다\n"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvMeaning01"
                android:layout_width="14dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:text="집\n에\n나\n\n세\n간\n\n따\n위\n\가\n"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvWordMain"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="10dp"
                android:paddingTop="20dp"
                android:text="살갑다"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="48dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:onClick="onClick"
                android:text="글보기"
                android:textSize="16sp"
                android:paddingBottom="24dp"/>


            <Button
                android:id="@+id/btnWrite"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:onClick="onClick"
                android:text="글쓰기"
                android:textColor="#c4792f"
                android:textSize="16sp"
                android:paddingBottom="24dp"/>
        </LinearLayout>


</LinearLayout>
